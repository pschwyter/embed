</head>

<body>
  <h1>Ada Embed Testing Page</h1>
  <div id="parent-element"></div>
  <button onclick="adaEmbed.toggle()">Toggle</button>
</body>
<script>
  window.adaSettings = {
    chatterTokenCallback: function(chatter){ console.log("My chatter:", chatter)},
    hideMask: true,
    greeting: "5c59aaabd8269e0339979014",
    metaFields: {
      testVal: "yolo",
      testVal2: "yodo"
    }
  };
</script>
<script 
  async 
  id="__ada" 
  src="/bundle.js"
  data-handle="ada-example" 
  data-lazy
  onload="handleOnLoad()"
></script>

<script>
  function handleOnLoad() {
    adaEmbed.start({
      handle: "ada-example",
      chatterTokenCallback: function(chatter){ console.log("My chatter:", chatter)}
    });
    // adaEmbed.deleteHistory();
  }
</script>

</html>
